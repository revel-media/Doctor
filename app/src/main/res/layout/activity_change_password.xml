<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".ChangePasswordActivity">
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginLeft="25dp"
       android:layout_marginRight="25dp"
       android:background="@drawable/edit_text_final"
       android:layout_marginTop="20dp"
       android:alpha=".9"
       ></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:src="@drawable/ic_change_password" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=" تغيير كلمة السر"
            android:textColor="#F9D778"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/edit_old_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"  android:textAlignment="center"
            android:drawableRight="@drawable/ic_password"
            android:hint="كلمة السر القديمة"
            android:paddingRight="20dp" />

        <EditText
            android:id="@+id/edit_new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_password"
            android:hint="كلمة السر الجديدة "
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"   android:textAlignment="center"
            android:paddingRight="20dp" />

        <EditText
            android:id="@+id/edit_re_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/ic_repass"
            android:hint="تاكيد كلمة السر"
            android:paddingRight="20dp" />
        <Button
            android:layout_marginTop="50dp"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_white_password"
            android:paddingLeft="50dip"
            android:paddingRight="60dip"
            android:text="تغيير"            android:background="@drawable/button"/>
    </LinearLayout>
</FrameLayout>